<div class="container-fluid align-justify-center">
  <a href="" class="top-link hide" id="scrollToTop"><i class="fas fa-3x fa-chevron-circle-up"></i></a>

  <div class="text-center py-3">
    <h1 class="py-1 my-3">3 Easy Steps<br>
    To Pass On Your <i class="far fa-heart"></i>ed Electronics</h1>
  </div>

  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= image_tag "https://images.unsplash.com/photo-1497250681960-ef046c08a56e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto", class: "w-100", alt: "First slide" %>
          <div class="carousel-caption">
            <h1><i class="fas fa-th-list"></i><br>
            List Item</h1>
            <p>Share More Info on Your Item</p>
          </div>
      </div>
      <div class="carousel-item">
        <%= image_tag "https://images.unsplash.com/photo-1497250681960-ef046c08a56e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto", class: "w-100", alt: "Second slide" %>
          <div class="carousel-caption">
            <h1> <i class="far fa-calendar-check"></i> <br>
            Schedule A Meetup</h1>
            <p>Accept Request for & Schedule Exchange</p>
          </div>
      </div>
      <div class="carousel-item">
        <%= image_tag "https://images.unsplash.com/photo-1497250681960-ef046c08a56e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto", class: "w-100", alt: "Third slide" %>
          <div class="carousel-caption d-none d-md-block">
            <h1><i class="far fa-hand-spock"></i><br>
            Pass It On</h1>
            <p>Your Item With New Owners</p>
          </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<div class="container-fluid">
  <br>
  <h2 class="py-3 text-center">All Our Pre-loved Items (<%= @items_filtered.length %>)</h2>
      <br>
        <div class="row">
          <% @items_filtered.reverse_each do |item| %>
            <div class="col-sm-4 d-flex">
              <div class="card flex-fill py-0 px-0 shadow p-3 mb-5" data-aos="zoom-in-up" data-aos-duration="1000">
                <% if item.photos.attached? %>
                  <%= cl_image_tag item.photos.first.key, height: 250, crop: :fill, class: "card-img-top", alt: "user uploaded image" %>
                <% else %>
                  <%= image_tag "https://images.unsplash.com/photo-1464380573004-8ca85a08751a?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80" %>
                <% end %>
                 <div class="card-body">
                  <h5 class="card-title"><%= item.title %></h5>
                  <p class="card-text"><%= item.description %></p>
                 </div>
                <div class="card-footer d-flex justify-content-between p-3">
                  <%= link_to 'More info', item_path(item), class: "text-light text-decoration-none" %>
                  <h6 class="text-light m-0">Posted on: <%= item.created_at.to_s.split(' ').first %></h6>
                </div>
              </div>
            </div>
          <% end %>
        </div>
  <div>
</div>
