<div class="container align-justify-center">
  <% content_for(:title, "Edit Item") %>
  <h1>Edit Item</h1>
  <%= simple_form_for @item, url: item_path do |f| %>
    <%= f.error_notification %>

    <%= f.input :title, placeholder: 'Macbook', label:'Give a sexy Title:' %>

    <%= f.input :description, placeholder: 'Great for student', label:'Description:' %>

    <%= f.input :condition, placeholder: 'Excellent', :collection => %w[Excellent Good Average Bad Broken] %>

    <%= f.input :year_made, placeholder: '2020', label:'Year Made:', min_max: true %>

    <%= f.input :number_available, placeholder: '1', label:'Number Available:' %>

    <%= f.input :photos, as: :file, input_html: { multiple: true }, label:'Upload Photos' %>

    <%= f.button :submit, class: "btn-primary" %>
    <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
  <% end %>
</div>
