<% content_for(:title, "New Item") %>
<h1>New Item</h1>
<%= simple_form_for @item, url: items_path do |f| %>
  <%= f.error_notification %>

  <%= f.input :title, placeholder: "Iphone" %>

  <%= f.input :description, placeholder: "Useful for Students" %>

  <%= f.input :condition, placeholder: "Excellent" %>

  <%= f.input :year_made, placeholder: "2020" %>

  <%= f.input :number_available, placeholder: "1" %>

  <%= f.input :photos, as: :file, input_html: { multiple: true } %>

  <%= f.button :submit, class: "btn-primary" %>
  <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
<% end %>
