<div class="container align-justify-center">
  <% content_for(:title, "New Item") %>
  <h1>New Item</h1>
  <%= simple_form_for @item, url: items_path do |f| %>
    <%= f.error_notification %>

    <%= f.input :title, label: 'Iphone:' %>

    <%= f.input :description, label: 'Useful for Students:' %>

    <%= f.input :condition, label: 'Excellent:' %>

    <%= f.input :year_made, label: '2020:' %>

    <%= f.input :number_available, label: '1:' %>

    <%= f.input :photos, as: :file, input_html: { multiple: true }, label: 'Upload photos here:' %>

    <%= f.button :submit, class: "btn-primary" %>
    <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
  <% end %>
</div>