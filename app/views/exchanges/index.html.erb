<h1>Exchanges</h1>
<h2>My requests</h2>
<ul>
  <% @user_exchanges.each do |exchange| %>
    <li><%= @items.find(exchange.item_id).title %> Approval?: <%= exchange.approved %></li>
  <% end %>
</ul>
<h2>My items</h2>
<ul>
  <% @user_items.each do |item| %>
    <li><%= item.title %> Requested?: <% if @exchange.find_by(item_id: item.id)%>
      <%= true %>
      <% if @exchange.find_by(item_id: item.id).approved %>
        <p>Item pending for trade</p>
      <% else %>
        <%= link_to "Approve", approve_exchange_path(@exchange.find_by(item_id: item.id)), method: :post %>
      <% end %>
      <% else  %>
      <%= false %>
      <% end %>
    </li>
  <% end %>
</ul>
